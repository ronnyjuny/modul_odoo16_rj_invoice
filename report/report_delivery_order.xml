<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_delivery_order_mini_template">
        <t t-call="web.html_container">
            <meta charset="utf-8"/>
            <t t-foreach="docs" t-as="doc">

                <style>
                    @page {
                        size: 20cm 27.94cm;
                        margin: 0.4cm;
                    }
                    body {
                        margin: 0;
                        font-family: "Consolas", "Lucida Console", "Liberation Mono", monospace;
                    }
                    table {
                        border-collapse: collapse;
                        width: 100%;
                    }
                    th, td {
                        border: 1px solid #000;
                        padding: 3px;
                    }
                    .no-border td {
                        border: none !important;
                    }
                </style>

                <div class="page" style="font-size: 11pt; line-height: 1.3;">

                    <!-- HEADER -->
                    <table class="no-border" style="font-size: 11pt; width:100%;">
                        <tr>
                            <td class="no-border" style="width: 45%; text-align: left;">
                                <t t-if="doc.company_id.name">
                                    <div style="font-size: 13pt;">
                                        <strong><t t-esc="doc.company_id.name"/></strong>
                                    </div>
                                </t>
                            </td>

                            <td class="no-border" style="width: 25%; text-align: center;">
                                <div style="font-size: 13pt; font-weight: bold;">
                                    SURAT JALAN
                                </div>
                            </td>

                            <td class="no-border" style="width: 30%; text-align: right; font-size: 13pt;">
                                <t t-if="doc.custom_sequence">
                                    <div>
                                        <strong>SEQ: <t t-esc="doc.custom_sequence"/></strong>
                                    </div>
                                </t>
                            </td>
                        </tr>
                    </table>

                    <hr style="border: 0; border-top: 1px solid #000; margin: 3px 0; width:100%;" />

                    <table class="no-border" style="font-size: 12pt; width:100%;">
                        <tr>
                            <td class="no-border" style="width: 50%; text-align: left; padding:0; margin:0;">
                                <strong>
                                    <t t-if="doc.picking_type_id.code == 'outgoing'">Kepada Yth:</t>
                                    <t t-if="doc.picking_type_id.code == 'incoming'">Vendor Address:</t>
                                    <t t-if="doc.picking_type_id.code not in ['incoming', 'outgoing']">Kepada Yth:</t>
                                </strong>
                            </td>

                            <td class="no-border" style="width: 50%; text-align: right; padding:0; margin:0;">
                                <t t-esc="doc.name or ''"/>
                            </td>
                        </tr>
                    </table>

                    <!-- CUSTOMER ADDRESS + EXTRA INFO -->
                    <table class="no-border" style="font-size: 11pt; width:100%; margin-top:2px;">
                        <tr>
                            <td style="vertical-align: top; width: 100%;">

                                <table class="no-border" style="font-size: 11pt; width:100%;">
                                    <tr>
                                        <td style="padding:0; margin:0;">
                                            <t t-esc="doc.partner_id.name or ''"/>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="padding:0; margin:0;">
                                            <t t-esc="doc.partner_id.street or ''"/>
                                        </td>
                                    </tr>

                                    <t t-if="doc.partner_id.street2">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                <t t-esc="doc.partner_id.street2"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="doc.partner_id.city or doc.partner_id.state_id or doc.partner_id.zip">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                <t t-set="parts" t-value="[
                                                    doc.partner_id.city or '',
                                                    doc.partner_id.state_id.name if doc.partner_id.state_id else '',
                                                    doc.partner_id.zip or ''
                                                ]"/>
                                                <t t-set="clean_parts" t-value="[p for p in parts if p]"/>
                                                <t t-out="', '.join(clean_parts)"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <t t-if="doc.partner_id.phone">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                Telp. <t t-esc="doc.partner_id.phone"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <!-- Customer PO -->
                                    <t t-if="doc.po_customer">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                Customer PO: <t t-esc="doc.po_customer"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <!-- Warehouse -->
                                    <t t-if="doc.location_id">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                Warehouse: <t t-esc="doc.location_id.display_name"/>
                                            </td>
                                        </tr>
                                    </t>

                                    <!-- Salesperson -->
                                    <t t-if="doc.sale_id.user_id.name">
                                        <tr>
                                            <td style="padding:0; margin:0;">
                                                Salesperson: <t t-esc="doc.sale_id.user_id.name"/>
                                            </td>
                                        </tr>
                                    </t>

                                </table>

                            </td>
                        </tr>
                    </table>

                </div>
            </t>
        </t>
    </template>
</odoo>
